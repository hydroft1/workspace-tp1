{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ générer le projet",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wconversion",
                "-fexceptions",
                "exo0PriseEnMain/v1/main.cpp",  // Chemin relatif correct
                "exo0PriseEnMain/v1/module.cpp",
                "-o",
                "${workspaceFolder}/main.exe"  // Fichier de sortie
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}